      <main>
        <form method="POST" action="/resourcewall_login">
          <label for="email">Email: </label>
            <input class="form-control" type="email" name="email" placeholder="example@gmail.com" style="width: 300px" >
          <label for="password">Password: </label><br>
            <input class="form-control" type="password" name="password" placeholder="Enter your password here" style="width: 300px">
          <div class='right'>
            <button type="submit" class="btn-light" style="margin-top:5px"> Login </button>
          </div>
        </form>
      </main>
    </div>
